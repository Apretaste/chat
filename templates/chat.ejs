<div class="row">
	<%if(messages.length>0){%>
	<h3>Chat con @<%=username%></h5>
	<%if(online=="1"){%>
		<i class="material-icons green-text" style="font-size:10px;">brightness_1</i>
	<%}%>
	<div class="chat">
		<%messages.forEach(message => {%>
		<%if(message.username == username) message.class = "you"; else message.class = "me";%>
		<div class="bubble <%=message.class%>">
			<small>
				<b>@<%=message.username%></b> - <%=message.sent%> 
			</small>
			<br>
			<%=message.text%>
			<%if(message.readed == "1"){%><i class="material-icons tiny" onclick="alert('Leido el: <%=message.read%>')">check</i><%}%>
		</div>
		<%});%>
	</div>
	<%}else{%>
	<p>Usted no tienen ningun mensaje con este usuario.</p>
	<%}%>

	<div class="valign-wrapper">
	<div class="input-field col s11">
		<textarea id="message" class="materialize-textarea" oninput="messageLengthValidate()"></textarea>
		<label for="message">Escribir</label>
		<span class="helper-text">Restante: 500</span>
	</div>
	<div class="col s1"><i class="material-icons" onclick="sendMessage()">send</i></div>
	</div>
</div>