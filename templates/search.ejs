<div class="row">
	<div class="col s12">
		<ul class="tabs tabs-fixed-width">
			<li class="tab"><a href="#" onclick="apretaste.send({command: 'CHAT OPEN'})">Abiertos</a></li>
			<li class="tab"><a href="#" class="active">Buscar</a></li>
			<li class="tab"><a href="#" onclick="apretaste.send({command: 'CHAT ONLINE'})">Online</a></li>
		</ul>
	</div>
</div>

<!-- USERNAME -->
<div class="row">
	<div class="col s12 input-field">
		<input id="username" type="text">
		<label for="username">Buscar por @username</label>
	</div>
</div>

<!-- PROVINCE -->
<div class="row">
	<div class="col s12 input-field">
		<select id="province">
			<option value="" selected>Todas</option>
			<% Object.keys(provinces).forEach(function(key){ %>
				<option value="<%= key %>"><%= provinces[key] %></option>
			<% }) %>
		</select>
		<label>Escoja una provincia</label>
	</div>
</div>

<!-- GENDER -->
<div class="row">
	<div class="col s12 input-field">
		<select id="gender">
			<option value="" selected>Todos</option>
			<% Object.keys(gender).forEach(function(key){ %>
				<option value="<%= key %>"><%= gender[key] %></option>
			<% }) %>
		</select>
		<label>Escoja género</label>
	</div>
</div>

<!-- AGE -->
<div class="row">
	<div class="col s6 input-field">
		<input id="min_age" type="number" value="0">
		<label for="min_age">Edad desde</label>
	</div>
	<div class="col s6 input-field">
		<input id="max_age" type="number" value="0">
		<label for="max_age">Edad hasta</label>
	</div>
</div>

<!-- RELIGION -->
<div class="row">
	<div class="col s12 input-field">
		<select id="religion">
			<option value="" selected>Todas</option>
			<% Object.keys(religions).forEach(function(key){ %>
				<option value="<%= key %>"><%= religions[key]['name'] %></option>
			<% }) %>
		</select>
		<label>Escoja religión</label>
	</div>
</div>

<div class="bottom-space"></div>

<!-- SAVE BUTTON -->
<div id="btn" class="fixed-action-btn">
	<a class="btn-floating btn-large waves-effect waves-light green" href="#!" onclick="searchUsers()">
		<i class="material-icons">search</i>
	</a>
</div>